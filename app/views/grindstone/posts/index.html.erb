<h1>Listing Posts</h1>

    <% @posts.each do |post| %>
      <h2><%= post.title %></h2>
      <h5><%= post.grindstone_author %></h5>
      <i><%= post.created_at %></i>
      <div><%= post.body %></div>
      <%= link_to 'Show', post %>
      <%= link_to 'Edit', edit_post_path(post) %>
    <% end %>

<%= link_to 'New Post', rails_admin_path %>